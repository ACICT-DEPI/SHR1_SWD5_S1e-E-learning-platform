@model List<Course>
@{
    ViewData["Title"] = "All Courses";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card border rounded-3 mt-5">
            <!-- Card header START -->
            <div class="card-header border-bottom">
                <div class="d-sm-flex justify-content-sm-between align-items-center">
                    <h3 class="mb-2 mb-sm-0">All Category</h3>
                    <a asp-action="Create" asp-controller="Course" class="btn btn-sm btn-primary-soft mb-0">Create Course</a>
                </div>
            </div>
            <!-- Card header END -->
            <!-- Card body START -->
            <div class="card-body">
                <div class="table-responsive-lg border-0 rounded-3">
                    <!-- Table START -->
                    <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                        <!-- Table head -->
                        <thead>
                            <tr>
                                <th scope="col" class="border-0">Image</th>
                                <th scope="col" class="border-0 rounded-start">Course Name</th>
                                <th scope="col" class="border-0">Course Description</th>
                                <th scope="col" class="border-0">Time Create</th>
                                <th scope="col" class="border-0">Price</th>
                                <th scope="col" class="border-0">Total Lecture</th>
                                <th scope="col" class="border-0">Course Time</th>
                                <th scope="col" class="border-0">Category</th>
                                <th scope="col" class="border-0 rounded-end">Action</th>
                            </tr>
                        </thead>
                        <!-- Table body START -->
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <!-- Course item -->
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <!-- Image -->
                                            <h6 class="mb-0 ms-2">
                                                @item.CourseName
                                            </h6>
                                        </div>
                                    </td>
                                    <!-- Image item -->
                                    <td><img width="100%" src="/@item.Image" alt="Alternate Text" /></td>
                                    <!-- Course Description item -->
                                    <td>@item.CourseDescription</td>
                                    <!-- Course Time -->
                                    <td>@item.CourseTime</td>
                                    <!-- Total Lecture -->
                                    <td>@item.TotalLecture</td>
                                    <!-- Price item -->
                                    <td>@item.Price</td>
                                    <!-- Category Name -->
                                    <td>@item.Category.CategoryName</td>
                                    <!-- Action item -->
                                    <td>
                                        <a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-sm btn-success-soft btn-round me-1 mb-0">
                                            <i class="far fa-fw fa-edit"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-danger-soft btn-round mb-0 delete-course" data-id="@item.Id">
                                            <i class="fas fa-fw fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).on('click', '.delete-course', function (e) {
        e.preventDefault();
        var id = $(this).data('id');
        var row = $(this).closest('tr'); // تحديد الـ row للحذف بعد الحذف

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/Course/DeleteCourse/' + id, // تأكد من صحة المسار
                    type: 'DELETE',
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                response.message,
                                'success'
                            );
                            // حذف الـ row من واجهة المستخدم بعد نجاح الحذف
                            row.fadeOut(500, function () {
                                $(this).remove();  // حذف الـ row بعد الـ fade out
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                response.message,
                                'error'
                            );
                        }
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'Something went wrong during deletion.',
                            'error'
                        );
                    }
                });
            }
        });
    });
</script>
